@page "/idiomas"
@using Coling.Shared
@inject IIdiomaService idiomaService
@inject NavigationManager navigationManager
@inject SweetAlertService sweetAlertService

<h3>Listar Idiomas</h3>

<div class="form-group row">
    <div class="col-sm-10">
        <a href="/idioma/crear" class="btn btn-primary m-1">Agregar Nuevo</a>
    </div>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th><strong>Nombre del Idioma</strong></th>
                <th><strong>Estado</strong></th>
                <th><strong>Acciones</strong></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var idioma in IdiomasLista)
            {
                <tr>
                    <td>@idioma.NombreIdioma</td>
                    <td>@idioma.Estado</td>
                    <td>
                        <button class="btn btn-primary" @onclick="()=>EditarIdioma(idioma.Id)">Editar</button>
                        <button class="btn btn-danger" @onclick="() => ConfirmarBorrarIdioma(idioma.Id)">Borrar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    public List<Idioma> IdiomasLista { get; set; } = new List<Idioma>();

    protected override async Task OnInitializedAsync()
    {
        string token = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c3VhcmlvIjoibWFyY28iLCJyb2wiOiJBZG1pbiIsImVzdGFkbyI6IkFjdGl2byIsImV4cCI6MTcxNDY5ODU1N30.MXG3tCUNsze-FNZo_E-2D7SJpOLPCclRbNvnbU1P4iY";

        // Obtener la lista de idiomas
        IdiomasLista = await idiomaService.ListaIdiomas(token);
    }

    private void EditarIdioma(int id)
    {
        navigationManager.NavigateTo($"/idioma/editar/{id}");
    }

    private async Task ConfirmarBorrarIdioma(int id)
    {
        var resultado = await sweetAlertService.FireAsync(new SweetAlertOptions
            {
                Title = "¿Estás seguro de borrar este idioma?",
                Text = "Esta acción no se puede deshacer",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Sí, borrar",
                CancelButtonText = "Cancelar"
            });

        if (resultado.IsConfirmed)
        {
            await BorrarIdioma(id);
        }
    }

    private async Task BorrarIdioma(int id)
    {
        string token = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c3VhcmlvIjoibWFyY28iLCJyb2wiOiJBZG1pbiIsImVzdGFkbyI6IkFjdGl2byIsImV4cCI6MTcxNDY5ODU1N30.MXG3tCUNsze-FNZo_E-2D7SJpOLPCclRbNvnbU1P4iY";
        var exito = await idiomaService.BorrarIdioma(id, token);

        if (exito)
        {
            navigationManager.NavigateTo("/idiomas", forceLoad: true);
        }
        else
        {
            await sweetAlertService.FireAsync("Error", "No se pudo borrar el idioma", SweetAlertIcon.Error);
        }
    }
}
