@page "/gradosAcademicos"
@inject IGradoAcademicoService gradoAcademicoService
@inject NavigationManager navigationManager
@inject SweetAlertService sweetAlertService

<h3>Listar Grados Académicos</h3>

<div class="form-group row">
    <div class="col-sm-10">
        <a href="/gradosAcademicos/crear" class="btn btn-primary m-1">Agregar Nuevo</a>
    </div>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th><strong>Nombre Grado</strong></th>
                <th><strong>Estado</strong></th>
                <th><strong>Acciones</strong></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grado in GradosAcademicosLista)
            {
                <tr>
                    <td>@grado.NombreGrado</td>
                    <td>@grado.Estado</td>
                    <td>
                        <button class="btn btn-primary" @onclick="()=>EditarGradoAcademico(grado.RowKey)">Editar</button>
                        <button class="btn btn-danger" @onclick="() => ConfirmarBorrarGradoAcademico(grado.PartitionKey, grado.RowKey)">Borrar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    public List<GradoAcademico> GradosAcademicosLista { get; set; } = new List<GradoAcademico>();

    protected override async Task OnInitializedAsync()
    {
        string token = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c3VhcmlvIjoibWFyY28iLCJyb2wiOiJBZG1pbiIsImVzdGFkbyI6IkFjdGl2byIsImV4cCI6MTcxNDY5ODU1N30.MXG3tCUNsze-FNZo_E-2D7SJpOLPCclRbNvnbU1P4iY";
        var response = await gradoAcademicoService.ListaGradosAcademicos(token);
        GradosAcademicosLista = response;
    }

    private void EditarGradoAcademico(string rowKey)
    {
        navigationManager.NavigateTo($"/gradosAcademicos/editar/{rowKey}");
    }

    private async Task ConfirmarBorrarGradoAcademico(string partitionKey, string rowKey)
    {
        var resultado = await sweetAlertService.FireAsync(new SweetAlertOptions
            {
                Title = "¿Estás seguro de borrar este grado académico?",
                Text = "Esta acción no se puede deshacer",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Sí, borrar",
                CancelButtonText = "Cancelar"
            });

        if (resultado.IsConfirmed)
        {
            await BorrarGradoAcademico(partitionKey, rowKey);
        }
    }

    private async Task BorrarGradoAcademico(string partitionKey, string rowKey)
    {
        string token = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c3VhcmlvIjoibWFyY28iLCJyb2wiOiJBZG1pbiIsImVzdGFkbyI6IkFjdGl2byIsImV4cCI6MTcxNDY5ODU1N30.MXG3tCUNsze-FNZo_E-2D7SJpOLPCclRbNvnbU1P4iY"; // Obtén el token de autenticación de alguna manera
        var exito = await gradoAcademicoService.BorrarGradoAcademico(partitionKey, rowKey, token);

        if (exito)
        {
            navigationManager.NavigateTo("/gradosAcademicos", forceLoad: true);
        }
        else
        {
            await sweetAlertService.FireAsync("Error", "No se pudo borrar el grado académico", SweetAlertIcon.Error);
        }
    }
}
