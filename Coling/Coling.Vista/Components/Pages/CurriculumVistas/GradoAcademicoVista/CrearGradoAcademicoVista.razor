@page "/gradosAcademicos/crear"
@inject IGradoAcademicoService servicioGradoAcademico
@inject NavigationManager nav
@inject SweetAlertService sweetAlertService

<h3>Crear Grado Académico</h3>

<EditForm EditContext="contextoEdicion">
    <DataAnnotationsValidator />
    <div class="mb-3">
        <label>Nombre del Grado:</label>
        <div>
            <InputText class="form-control" @bind-Value="@grado.NombreGrado" />
            <ValidationMessage For="@(() => grado.NombreGrado)" />
        </div>
    </div>

    <button class="btn btn-primary" @onclick="CrearGradoAcademico">Guardar</button>
    <button class="btn btn-primary" @onclick="CancelarEdicion">Cancelar</button>
</EditForm>

@code {
    private EditContext contextoEdicion;
    private GradoAcademico grado = new();

    protected override void OnInitialized()
    {
        contextoEdicion = new EditContext(grado);
    }

    private async Task CrearGradoAcademico()
    {
        if (contextoEdicion.Validate())
        {
            string token = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c3VhcmlvIjoibWFyY28iLCJyb2wiOiJBZG1pbiIsImVzdGFkbyI6IkFjdGl2byIsImV4cCI6MTcxNDY5ODU1N30.MXG3tCUNsze-FNZo_E-2D7SJpOLPCclRbNvnbU1P4iY";
            grado.PartitionKey = "GradosAcademicos";
            grado.Estado = "Activo";
            var respuesta = await servicioGradoAcademico.InsertarGradoAcademico(grado, token);
            if (!respuesta)
            {
                await sweetAlertService.FireAsync("Error", "No se pudo guardar", SweetAlertIcon.Error);
                return;
            }
            nav.NavigateTo("/gradosacademicos", forceLoad: true);
        }
    }
    private async Task CancelarEdicion()
    {
        var result = await sweetAlertService.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Está seguro de cancelar la creación del grado académico? Los cambios no guardados se perderán.",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                CancelButtonText = "No",
                ConfirmButtonText = "Sí"
            });

        if (!string.IsNullOrEmpty(result.Value))
        {
            nav.NavigateTo("/gradosacademicos", forceLoad: true);
        }
    }
}
