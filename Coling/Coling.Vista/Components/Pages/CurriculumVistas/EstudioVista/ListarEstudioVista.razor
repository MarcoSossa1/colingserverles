@page "/estudios"
@inject IEstudioService estudioService
@inject NavigationManager navigationManager
@inject SweetAlertService sweetAlertService

<h3>Listar Estudios</h3>

<div class="form-group row">
    <div class="col-sm-10">
        <a href="/estudio/crear" class="btn btn-primary m-1">Agregar Nuevo</a>
    </div>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th><strong>Tipo de Estudio</strong></th>
                <th><strong>Afiliado</strong></th>
                <th><strong>Grado</strong></th>
                <th><strong>Título Recibido</strong></th>
                <th><strong>Institución</strong></th>
                <th><strong>Año</strong></th>
                <th><strong>Estado</strong></th>
                <th><strong>Acciones</strong></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var estudio in EstudiosLista)
            {
                <tr>
                    <td>@estudio.TipoEstudio</td>
                    <td>@estudio.Afiliado</td>
                    <td>@estudio.Grado</td>
                    <td>@estudio.TituloRecibido</td>
                    <td>@estudio.Institucion</td>
                    <td>@estudio.Año</td>
                    <td>@estudio.Estado</td>
                    <td>
                        <button class="btn btn-primary" @onclick="()=>EditarEstudio(estudio.RowKey)">Editar</button>
                        <button class="btn btn-danger" @onclick="() => ConfirmarBorrarEstudio(estudio.PartitionKey, estudio.RowKey)">Borrar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    public List<Estudio> EstudiosLista { get; set; } = new List<Estudio>();

    protected override async Task OnInitializedAsync()
    {
        string token = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c3VhcmlvIjoibWFyY28iLCJyb2wiOiJBZG1pbiIsImVzdGFkbyI6IkFjdGl2byIsImV4cCI6MTcxNDY5ODU1N30.MXG3tCUNsze-FNZo_E-2D7SJpOLPCclRbNvnbU1P4iY";
        var response = await estudioService.ListaEstudios(token);
        EstudiosLista = response;
    }

    private void EditarEstudio(string rowKey)
    {
        navigationManager.NavigateTo($"/estudio/editar/{rowKey}");
    }

    private async Task ConfirmarBorrarEstudio(string partitionKey, string rowKey)
    {
        var resultado = await sweetAlertService.FireAsync(new SweetAlertOptions
            {
                Title = "¿Estás seguro de borrar este estudio?",
                Text = "Esta acción no se puede deshacer",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Sí, borrar",
                CancelButtonText = "Cancelar"
            });

        if (resultado.IsConfirmed)
        {
            await BorrarEstudio(partitionKey, rowKey);
        }
    }

    private async Task BorrarEstudio(string partitionKey, string rowKey)
    {
        string token = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c3VhcmlvIjoibWFyY28iLCJyb2wiOiJBZG1pbiIsImVzdGFkbyI6IkFjdGl2byIsImV4cCI6MTcxNDY5ODU1N30.MXG3tCUNsze-FNZo_E-2D7SJpOLPCclRbNvnbU1P4iY"; // Obtén el token de autenticación de alguna manera
        var exito = await estudioService.BorrarEstudio(partitionKey, rowKey, token);

        if (exito)
        {
            navigationManager.NavigateTo("/estudios", forceLoad: true);
        }
        else
        {
            await sweetAlertService.FireAsync("Error", "No se pudo borrar el estudio", SweetAlertIcon.Error);
        }
    }
}
